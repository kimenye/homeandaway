.container.body
  .row.summary
    .three.columns
      %p.summary
        %strong
          = "#{@num_stories}"
        Stories shared
      .indicator
    .three.columns
      %p.summary
        %strong
          = "#{@num_nominees}"
        Nominees
    .three.columns
      %p.summary
        %strong
          = "#{@num_votes}"
        Votes Cast
    .three.columns
      %p.summary
        %strong
          1,250,000
        Won
.container.yellow
  .row.spacer
  .row.main.rounded
    .twelve.columns
      %h4.subheader Most Recent Stories
  .row.main
    .twelve.columns
      - if @stories and !@stories.empty?
        %ul.block-grid.three-up.mobile-one-up
          - @stories.each do |msg|
            %li
              .story
                .twelve.columns
                  %h4.subheader
                    %a{:href => "stories/#{msg.id}"}
                      = msg.title
                .twelve.columns.story-text
                  %p
                    = msg.story_text
                .twelve.columns
                  .four.columns
                    - if msg.has_pic?
                      = image_tag msg.picture.url(:thumb)
                    - else
                      - if !msg.user.has_pic?
                        = image_tag "/assets/200x200.gif"
                  .eight.columns
                    %p.name
                      %strong
                        = msg.user.name
                    %p.location
                      = image_tag "/assets/location.jpg"
                      = msg.user.location
  .row.main
    .two.columns.offset-by-ten
      = image_tag "/assets/western-union-logo.jpg"